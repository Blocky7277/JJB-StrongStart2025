import { useState } from 'react'
import { getFullProductAnalysis } from '@/services/recommendationEngine'

export default function AIAnalysisComponent() {
  const [input, setInput] = useState('')
  const [output, setOutput] = useState('')
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState('')

  const runAnalysis = async () => {
    setLoading(true)
    setError('')
    setOutput('')

    try {
      // Try JSON parse, fallback to plain text
      let productData: any
      try {
        productData = JSON.parse(input)
      } catch {
        productData = { raw: input }
      }

      const result = await getFullProductAnalysis(productData)
      setOutput(JSON.stringify(result, null, 2))
    } catch (err) {
      console.error(err)
      setError('AI Analysis failed. Check console for details.')
    } finally {
      setLoading(false)
    }
  }

  return (
    <div style={{ padding: '1rem', display: 'flex', flexDirection: 'column', gap: '12px' }}>
      <h2 style={{ fontWeight: 700, fontSize: '1.2rem' }}>AI Product Analysis</h2>

      <textarea
        placeholder="Paste product JSON or text here..."
        value={input}
        onChange={(e) => setInput(e.target.value)}
        style={{
          width: '100%',
          height: '120px',
          padding: '10px',
          borderRadius: '8px',
          border: '1px solid #ccc'
        }}
      />

      <button
        onClick={runAnalysis}
        style={{
          padding: '10px 16px',
          borderRadius: '8px',
          background: '#667eea',
          color: 'white',
          border: 'none',
          cursor: 'pointer'
        }}
      >
        {loading ? 'Analyzingâ€¦' : 'Run AI Analysis'}
      </button>

      {error && <div style={{ color: 'red' }}>{error}</div>}

      {output && (
        <pre
          style={{
            background: '#f5f5f5',
            padding: '12px',
            borderRadius: '8px',
            whiteSpace: 'pre-wrap',
            maxHeight: '250px',
            overflowY: 'auto',
            fontSize: '0.85rem'
          }}
        >
          {output}
        </pre>
      )}
    </div>
  )
}
